@{
    ViewBag.Title = "Message Queue Service";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Message Queue Service</title>
    <style>
        /* Your existing styles */

        /* Add a new style for the button container */
        .button-container-extended {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <header>
        <h1>Message Queue Service</h1>
    </header>

    <div class="container">
        <h2>Welcome to Message Queue Service</h2>
        <p>This is a demo application for the message queue service.</p>

        <div class="form-container">
            <!-- Form for Channel A -->
            @using (Html.BeginForm("PublishMessageChannelA", "MessageQueueService"))
            {
                <label for="contentA">Content for Channel A:</label>
                <input type="text" name="content" id="contentA" required />
                <button type="submit">Publish to Channel A</button>
            }

            <!-- Form for Channel A2 -->
            @using (Html.BeginForm("PublishMessageChannelA2", "MessageQueueService"))
            {
                <label for="contentA2">Content for Channel A2:</label>
                <input type="text" name="content" id="contentA2" required />
                <button type="submit">Publish to Channel A2</button>
            }

            <!-- Form for Channel B -->
            @using (Html.BeginForm("PublishMessageChannelB", "MessageQueueService"))
            {
                <label for="contentB">Content for Channel B:</label>
                <input type="text" name="content" id="contentB" required />
                <button type="submit">Publish to Channel B</button>
            }

            <!-- Form for Channel B2 -->
            @using (Html.BeginForm("PublishMessageChannelB2", "MessageQueueService"))
            {
                <label for="contentB2">Content for Channel B2:</label>
                <input type="text" name="content" id="contentB2" required />
                <button type="submit">Publish to Channel B2</button>
            }
        </div>

        <!-- Button container for better alignment -->
        <div class="button-container-extended">
            <a href="@Url.Action("PublishMessageChannelA")" class="button">Go to Publish Message to Channel A</a>
            <a href="@Url.Action("PublishMessageChannelB")" class="button">Go to Publish Message to Channel B</a>
        </div>
    </div>
</body>
</html>
