<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title - Message Queue Service</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            color: #333;
        }

        header {
            background-color: #428bca;
            color: #fff;
            padding: 10px;
            text-align: center;
        }

        nav {
            background-color: #333;
            padding: 10px;
            text-align: center;
        }

            nav a {
                color: #fff;
                text-decoration: none;
                padding: 10px;
                margin: 0 10px;
            }

        .container {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 5px;
        }
    </style>
    @RenderSection("styles", false)
</head>
<body>
    <header>
        <h1>Message Queue Service</h1>
    </header>
    <nav>
        <a href="@Url.Action("Index", "MessageQueueService")">Home</a>
        <a href="@Url.Action("PublishMessageChannelA", "MessageQueueService")">Publish to Channel A</a>
        <a href="@Url.Action("PublishMessageChannelB", "MessageQueueService")">Publish to Channel B</a>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    @RenderSection("scripts", false)
</body>
</html>
